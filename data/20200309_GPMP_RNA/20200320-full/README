for s in nr.summary nr.summary.sum-species nr.summary.sum-genus ; do
echo $s
merge_summaries.py --int --output unmapped.bam.diamond.${s}.csv.gz trimmed/length/*.STAR.hg38.unmapped.diamond.${s}.txt.gz
