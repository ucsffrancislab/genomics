


aws s3 sync s3://igv.org.genomes/hg38/rmsk/ /francislab/data1/refs/igv.org.genomes/hg38/rmsk/

for bed in hg38/rmsk/*bed.gz ; do
echo $bed
gtf=${bed/bed.gz/gtf}
zcat ${bed} | awk 'BEGIN{FS=OFS="\t"}{print $1,"source","feature",1+$2,$3,".",$6,".","feature_name \""$4"\""}' > ${gtf}
done

